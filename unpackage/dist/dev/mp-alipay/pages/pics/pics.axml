<view class="pics"><scroll-view class="left" scroll-y="{{true}}"><view data-event-opts="{{[['tap',[['leftClickHandle',[index,'$0'],[[['cates','id',item.id,'id']]]]]]]}}" class="{{(active===index?'active':'')}}" onTap="__e" a:for="{{cates}}" a:for-item="item" a:for-index="index" a:key="id">{{''+item.title+''}}</view></scroll-view><scroll-view class="right" scroll-y="{{true}}"><view class="item" a:for="{{secondData}}" a:for-item="item" a:for-index="__i0__" a:key="id"><image src="{{item.img_url}}" mode data-event-opts="{{[['tap',[['previewImg',['$0'],[[['secondData','id',item.id,'img_url']]]]]]]}}" onTap="__e"></image><text>{{item.title}}</text></view><block a:if="{{secondData.length===0}}"><text>暂无数据</text></block></scroll-view></view>